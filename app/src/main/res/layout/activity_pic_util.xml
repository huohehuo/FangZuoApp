<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fangzuo.assist.Activity.PicUtilActivity">
    <include layout="@layout/top_bar"/>
    <com.venusic.handwrite.view.HandWriteView
        android:id="@+id/view"
        android:layout_width="match_parent"
        app:paintMaxWidth="20px"
        app:paintMinWidth="15px"
        app:paintColor="#000000"
        android:layout_height="250dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_reset"
            android:text="保存签名"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/btn_login"
            android:layout_height="wrap_content" />
        <include layout="@layout/line_shu"/>
        <Button
            android:id="@+id/btn_getpic"
            android:text="显示签名"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/btn_login"
            android:layout_height="wrap_content" />
        <include layout="@layout/line_shu"/>
        <Button
            android:id="@+id/btn_clear"
            android:text="清空"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/btn_login"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="预览"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/line_heng"/>
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
